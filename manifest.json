{
  "manifest_version": 3,
  "name": "Aeries Grade Calculator",
  "version": "8.8",
  "description": "Calculate 'What-If' grades, detect hidden assignments, and chat with AI to analyze your Aeries gradebook.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:1700/*",
    "https://generativelanguage.googleapis.com/*",
    "https://script.google.com/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-detector.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}